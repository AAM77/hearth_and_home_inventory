<!-- Controls flash messages -->
<%= erb(:"partials/flash_partial") %>

<!-- Displays page title -->
<div class="title_heading">
  <h3> Create a New Item </h3>
</div>
<br>


<form action="/<%= current_user.slug %>/items/new" method="POST">

  <!-- Lists the items in the folder (alphabetical Order) -->
  <!-- Displays an item url + edit and delete buttons -->

  <!-- ITEM FORM PARTIAL -->
  <%= erb(:"partials/item_form_partial", :locals => {
    :temp_name => "Item Name", :temp_cost => "0.00",
    :temp_description => "Item Description (e.g. shape, color, why it's important, etc.)",
    :object_one => @folders, :object_two => @categories}) %>
  <!-- ITEM FORM PARTIAL -->



  <!-- Display a dropdown menu of existing folders/categories to choose from -->
  <!-- Display folder/category creation form -->
  <!-- Creates folder/category only if name does not exist -->

  <h4> Choose a Folder: (optional)</h4>

  <%= erb(:"partials/category_folder_select_partial", :locals => {:itm => nil, :object => @folders, :object_string => "folder"}) %>

  <br>

  <h4> Choose a Category: (optional)</h4>
  <%= erb(:"partials/category_folder_select_partial", :locals => {:itm => nil, :object => @categories, :object_string => "category"}) %>


  <!-- Submit Button -->
  <button class="content_button"  type="submit">Create Item</button>
</form>

<br>
<br>

<!-- Displays a Back button. It takes the user to the previously visited page -->
<a href="javascript:history.back()">Go Back</a>
