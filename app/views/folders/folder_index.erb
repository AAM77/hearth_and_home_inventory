<% if flash[:success_message] %>
  <br>
  <div id="flash_message" style="text-align: center; border: 2px solid green;">
    <%= flash[:success_message] %>
  </div>
  <br>

<% elsif flash[:fail_message] %>
  <br>
  <div id="flash_message" style="border: 2px solid red;">
    <%= flash[:fail_message] %>
  </div>
  <br>
<% end %>

<% @folders.each do |folder| %>
<a href="/folders/<%= folder.slug %>/items"><%= folder.name %></a>

<form action="/folders/<%= folder.slug %>/delete" method="POST">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <button type="submit">Delete Folder</button>
</form>

<form action="/folders/<%= folder.slug %>/edit">
  <button type="submit">Edit</button>
</form><br>

<% end %>

<br>
<br>

<a href="/<%= current_user.slug %>/folders/new">Create New Folder</a>
