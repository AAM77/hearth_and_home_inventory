<h2><%= current_user.username %>'s Folders</h2>
<br>

<% if flash[:success] %>
  <br>
  <div class="flash_success">
    <%= flash[:success] %>
  </div>
  <br>

<% elsif flash[:warning] %>
  <br>
  <div class="flash_warning">
    <%= flash[:warning] %>
  </div>
  <br>

<% elsif flash[:warning] %>
  <br>
  <div class="flash_login">
    <%= flash[:warning] %>
  </div>
  <br>
<% end %>


<% @folders.each do |folder| %>
<a href="/<%= current_user.slug %>/folders/<%= folder.slug %>"><%= folder.name %></a>

<form action="/<%= current_user.slug %>/folders/<%= folder.slug %>/edit">
  <button class="content_button"  type="submit">Edit</button>
</form>

<form action="/<%= current_user.slug %>/folders/<%= folder.slug %>/delete" method="POST">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <button class="content_button"  type="submit">Delete Folder</button>
</form><br>

<% end %>

<br>
<br>

<a href="/<%= current_user.slug %>/folders/new">Create New Folder</a>
