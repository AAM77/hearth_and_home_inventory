

<%= erb(:"partials/flash_partial") %>

<!-- Display Page Title -->
<h2><%= current_user.username %>'s Categories</h2>
<br>

<!-- Display category url -->
<% @categories.each do |category| %>
  <a href="/<%= current_user.slug %>/categories/<%= category.slug %>"><%= category.name %></a>

  <!-- Display edit button -->
  <form action="/<%= current_user.slug %>/categories/<%= category.slug %>/edit">
    <button class="content_button"  type="submit">Edit</button>
  </form>

  <!-- Display delete button -->
  <form action="/<%= current_user.slug %>/categories/<%= category.slug %>/delete" method="POST">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <button class="content_button"  type="submit">Delete Category</button>
  </form><br>

<% end %>

<br>
<br>

<!-- Display Create Category Link -->
<a href="/<%= current_user.slug %>/categories/new">Create New Category</a>

<br>
<br>

<!-- Display a Back button. It takes the user to the previously visited page -->
<a href="javascript:history.back()">Go Back</a>
